// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Meeting {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  slug     String?
  name     String
  time     String?
  timezone String?
  day      Int?
  duration Int?
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  emailHash String
  name      String?
}

model Account {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  name         String
  url          String
  theme        String
  meetingCount Int
}
